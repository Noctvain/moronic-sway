### === Основні параметри ===
set $mod Mod4

# Автозапуск програм
exec dex --autostart --environment sway

# Polybar → Waybar
bar {
    swaybar_command waybar
}

# Фон
exec_always swaybg -i ~/Pictures/space.png -m fill

# Розкладка клавіатури (setxkbmap → input)
input * {
    xkb_layout us,ua,ru
    xkb_options grp:alt_shift_toggle
}

# applets
exec_always --no-startup-id blueman-applet
exec_always --no-startup-id nm-applet

# Сповіщення (mako або swaync)
exec swaync

# === Шрифти ===
font pango:DejaVu Sans 10

# === Кольори ===
set $bg0  #1a1818
set $bg1  #333333
set $bg2  #cc241d
set $bg3  #d79921
set $bg4  #458588
set $bg5  #689d6a
set $bg6  #a89984

client.focused          $bg0 $bg0 $bg0 $bg0
client.focused_inactive $bg1 $bg1 $bg1 $bg1
client.unfocused        $bg1 $bg1 $bg1 $bg1
client.urgent           $bg2 $bg2 $bg2 $bg2

### === Аудіо / мікрофон ===
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

### === Яскравість ===
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

### === Основні гарячі клавіші ===
floating_modifier $mod
tiling_drag $mod


## === Borders and Gaps ===
default_border pixel 1
default_floating_border pixel 1
smart_borders on

gaps inner 4
gaps outer 4
smart_gaps on

# Terminal
bindsym $mod+Return exec kitty

# Kill window
bindsym $mod+q kill

# Launcher
bindsym $mod+r exec rofi -show drun

# Lock / Suspend
bindsym $mod+x exec swaylock -i ~/Pictures/finalizer.png
bindsym $mod+z exec systemctl suspend

# File manager
bindsym $mod+d exec nautilus

# === Переміщення / фокус ===
bindsym $mod+left focus left
bindsym $mod+down focus down
bindsym $mod+up focus up
bindsym $mod+right focus right

bindsym $mod+Shift+left move left
bindsym $mod+Shift+down move down
bindsym $mod+Shift+up move up
bindsym $mod+Shift+right move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# === Робочі простори ===
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload / Restart / Exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r exec swaymsg reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Вийти з Sway?' -B 'Так, вийти' 'swaymsg exit'

